/** Ctools Plugins ******************************************************/

/**
 * Implements HOOK_ctools_plugin_directory()
 *
 * Tell ctools where our plugins live.
 */
function sourcery_extras_ctools_plugin_directory($module, $plugin) {
  if ($module == 'sourcery') {
    return 'plugins/' . $plugin;
  }
}
